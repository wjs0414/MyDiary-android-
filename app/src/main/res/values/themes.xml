<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDiary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#778899</item>
        <item name="colorPrimaryVariant">#778899</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#778899</item>
        <item name="colorSecondaryVariant">#778899</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="DatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">#8a778899</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">#8a778899</item>
    </style>



</resources>